<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RockPaperScissorsLizardSpock.Client.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:RockPaperScissorsLizardSpock.Client.Pages"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Home">
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate pages:HomePage}"
                Route="HomePage" />
        </Tab>
        <Tab Title="About">
            <ShellContent
                Title="About"
                ContentTemplate="{DataTemplate pages:AboutPage}"
                Route="AboutPage" />
        </Tab>
    </TabBar>
    
</Shell>
