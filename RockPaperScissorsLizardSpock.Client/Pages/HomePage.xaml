<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:RockPaperScissorsLizardSpock.Client.ViewModels"
             x:Class="RockPaperScissorsLizardSpock.Client.Pages.HomePage"
             x:DataType="vm:GameViewModel"
             Title="Home">
    
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button
            Text="Connect"
            Command="{x:Binding ConnectCommand}"
            HorizontalOptions="Center" 
            Margin="20" />

        <Entry Text="{x:Binding Username, Mode=TwoWay}"
               Margin="20" />
        
    </VerticalStackLayout>
    
</ContentPage>